@model YTE.BusinessLogic.Implementation.Account.Model.ResendConfirmationEmailModel

<h2 class="py-3">Status:</h2>
@if (Model.IsEmailSent)
{
    <p class="alert alert-success" role="alert">We've just sent you a new email regarding your request. Be sure to check your inbox or your spam folder! Thank you for using YTE.</p>
}
else if (!Model.IsUserFound)
{
    <p class="alert alert-danger" role="alert">There is no account associated with the email you inserted. Try to resend the activation email again below or <a href="/UserAccount/Register">create an account!</a></p>
}
else if (Model.IsEmailConfirmed)
{
    <p class="alert alert-light" role="alert"> Your account is already confirmed. You can log in <a href="/UserAccount/Login">here</a></p>
}


<form href="/UserAccount/ResendConfirmation" method="get">
    <div class="form-actions no-color">
        <p>
            Insert your email: <input type="email" name="id" />
            <input type="submit" value="Send" class="btn btn-primary" /> |
            <a href="/Home/Index">Go to home screen</a>
        </p>
    </div>
</form>

