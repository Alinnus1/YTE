@model YTE.BusinessLogic.Implementation.Account.Model.RegisterModel

@{ ViewData["Title"] = "View"; }

<h1>View</h1>

<h4>RegisterVm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/UserAccount/Register" method="post" novalidate="novalidate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label" for="Email">Email</label>
                <input class="form-control" type="text" id="Email" name="Email" value="">
                @*<span class="text-danger field-validation-valid" data-valmsg-for="Email" data-valmsg-replace="true"></span

                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />*@
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" for="Password">Password</label>
                <input type="password" class="form-control input-validation-error" id="Password" name="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" for="Name">Name</label>
                <input class="form-control input-validation-error" type="text" id="Name" name="Name" value="">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" for="Pronoun">Pronoun</label>
                <input class="form-control input-validation-error" type="text" id="Pronoun" name="Pronoun" value="">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" for="Age">Date of Birth</label>
                <input class="form-control input-validation-error" type="date" id="Age" name="Age" value="1900-01-01" placeholder="dd-mm-yyyy" min="1900-01-01" max="2020-01-01" timezone="[[timezone]]">
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" for="GenderId">GenderId</label>
                <input class="form-control input-validation-error" type="number" id="GenderId" name="GenderId" value="">
                <span asp-validation-for="GenderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Home/Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
