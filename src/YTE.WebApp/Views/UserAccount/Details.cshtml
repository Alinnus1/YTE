@model YTE.BusinessLogic.Implementation.Account.Model.DetailsUserAccountModel

<h1 class="py-3">Details of your account</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            UserName
        </dt>
        <dd class="col-sm-10">
            @Model.UserName
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Pronoun
        </dt>
        <dd class="col-sm-10">
            @Model.Pronoun
        </dd>
        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10">
            @Model.Age
        </dd>
        <dt class="col-sm-2">
            JoinDate
        </dt>
        <dd class="col-sm-10">
            @Model.JoinDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Gender
        </dt>
        <dd class="col-sm-10">
            @Model.Gender
        </dd>
        <dt class="col-sm-2">
            Email notifications
        </dt>
        <dd class="col-sm-10">
            @if (Model.WantsNotifications)
            {<span>Enabled </span>}
            else
            { <span>Disabled </span>}
        </dd>
        <dt class="col-sm-2">
            Profile Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Image" width="100" height="100" />
        </dd>


    </dl>
</div>
<div class="btn-group" role="group" aria-label="example">

    <a type="button" class="btn btn-outline-dark" href="/UserAccount/Edit">Edit Account</a>
    <a type="button" class="btn btn-outline-warning" href="/UserAccount/ChangePassword">Change password</a>
    <a type="button" class="btn btn-outline-danger" href="/UserAccount/Delete">Delete account</a>
    <a type="button" class="btn btn-outline-primary" href="/Home/Index">Back to Home</a>
</div>
