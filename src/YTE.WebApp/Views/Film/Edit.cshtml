@model YTE.BusinessLogic.Implementation.Film.Model.EditFilmModel

<h1 class="py-3">Edit <i>@Model.Name</i></h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Title</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Director</label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Duration</label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Release date</label>
                <input asp-for="ReleaseDate" type="month" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Studio</label>
                <input asp-for="Studio" class="form-control" />
                <span asp-validation-for="Studio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Language</label>
                <input asp-for="Language" class="form-control" />
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Poster image</label>
                <input type="file" asp-for="Poster" accept=".png, .jpg, .jpeg, .gif"/>
                <span asp-validation-for="Poster" class="text-danger"></span>
            </div><div class="form-group">
                <label class="control-label"> Background image</label>
                <input type="file" asp-for="Background" accept=".png, .jpg, .jpeg, .gif"/>
                <span asp-validation-for="Background" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Select genres</label>
                <select id="Genre" asp-for="selectedGenres" class="form-control select" asp-items="@(new SelectList(string.Empty,"Value","Text"))" multiple></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Film/List">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/film-genre-multiselect.js"></script>
}
